{
	"titulo": "",
	"descricao: "",
	"status": "",
	"responsavel": "",
	"dataDeEntrega": ""

}

PUT: /adm/transferirTarefa/{id}

GET /adm/exibirTasks

GET /adm/exibirTask/{id}

--------------------- Comandos Colaborador para editar tarefas ------------------------------------------

PUT: /api/editarTarefa/{id}

