	"senha": ""
}

---------------------Comandos para cadastrar usuarios - ADM ------------------------------------------

POST /adm/cadastroUsuario

{
 	"email": "",
 	"senha": "",
 	"role": ""
} 

PUT: /adm/editarUsuario

PUT: /adm/editarSenha

GET: /adm/exibirTodosUsuario

GET: /adm/exibirUsuario/{id}

DELETE: /adm/excluirUsuario 

---------------------ADM TAREFAS ------------------------------------------

